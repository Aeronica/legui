<class-binding xmlns="binding.legui.liquidengine.org"
  for="org.liquidengine.legui.component.Button" to="button" default="true"
  inherit="org/liquidengine/legui/binding/component/Component.xml">

  <bind field="textState" to="textState" as="field">
    <using-binding path="org/liquidengine/legui/binding/component/optional/TextState.xml"/>
  </bind>
  <bind field="backgroundIcon" as="field"/>
  <bind field="focusedBackgroundIcon" as="field"/>
  <bind field="pressedBackgroundIcon" as="field"/>
  <bind field="hoveredBackgroundIcon" as="field"/>

</class-binding>