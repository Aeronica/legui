<class-binding default="true" for="org.liquidengine.legui.component.Component" to="component" xmlns="binding.legui.liquidengine.org">
  <bind field="position" to="position"/>
  <bind field="size">
    <using-binding path="org/liquidengine/legui/binding/common/Vector2fSize.xml"/>
  </bind>
  <bind field="enabled"/>
  <bind field="focused"/>
  <bind field="pressed"/>
  <bind field="tabIndex" to="tabIndex"/>
  <bind field="childs" as="field" to="childs">
    <using-accessor class="org.liquidengine.legui.binding.accessor.ComponentChildsAccessor"/>
  </bind>
</class-binding>