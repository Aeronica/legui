<class-binding for="org.liquidengine.legui.component.Component" to="component" default="true" xmlns="binding.legui.liquidengine.org">
  <bind field="position" to="position" using="org/liquidengine/legui/binding/common/Vector2f.xml"/>
  <bind field="size" to="size" using="org/liquidengine/legui/binding/common/Vector2size.xml"/>
  <bind field="enabled"/>
  <bind field="focused"/>
  <bind field="pressed"/>
  <bind field="tabIndex" to="tabIndex"/>
  <bind field="components" as="field" to="childs"/>
  <unbind field="components"/>
</class-binding>